
<%= simple_form_for(@visitante) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

<div class="Card">
  <div class="Card-body">
  <form class="row g-3">

    <%= f.label :nome, class: "form-label" %>
          <%= f.text_field :nome, class: "form-control", id: "inputEmail4" %>
    <div class="row">
      <div class="col-md-6">  
          <%= f.label :cpf, class: "form-label" %>
          <%= f.text_field :cpf, class: "form-control", id: "inputPassword4" %>
      </div>  
      <div class="col-md-6">  
          <%= f.label :RG, class: "form-label" %>
          <%= f.text_field :rg, class: "form-control", id: "inputPassword4" %>
      </div>  
    </div> 

      <div class="col-md-6">  
          <%= f.label :tel, class: "form-label" %>
          <%= f.text_field :tel, class: "form-control", id: "inputPassword4" %>
      </div> 
    
        <div class="col-md-6"></br>
          <p></p>
           <%= f.input :data_hora %>
          <p></p>
        </div>  
        <div class="col-md-6"></br>
            <%= f.collection_select :setor_id, Setor.all, :id, :nome, { include_blank: 'Selecione um setor' }, class: 'form-select' %>
        </div>
      <div class="col-md-6"></br>

     
         <div class="form-check">
            <%= f.check_box :concluida, class: "form-check-input", id: "flexCheckIndeterminate" %>
            <%= label_tag "flexCheckIndeterminate", "Concluir visita", class: "form-check-label" %>
            <p></p>        
         </div>
         
       </div>
    </div>
      
    <div class="d-flex justify-content-between">
      <div class="d-flex gap-2">
       
            <%= f.button :submit, class:"btn btn-success" %>
        </div>  
        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
           <%= link_to "Voltar", visitantes_path, class:"btn btn-outline-primary" %>
      </div>
    </div>    
      </div>
</div>
</form>
</div>
<% end %>
