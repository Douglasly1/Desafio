<%= simple_form_for(@visitante) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="card">
    <div class="card-body">
      <div class="row g-3">
        <div class="col-md-6">       
          <%= f.input :nome, class: "form-control", required: true %>

        </div>

        <div class="col-md-6">
          <%= f.label "CPF", class: "form-label", required: true %>
          <%= f.text_field :cpf, class: "form-control", id: "inputPassword4", required: true %>
          <%= f.error :cpf, class: "text-danger" %> <!-- Mensagem de erro abaixo do campo -->
        </div>

        <div class="col-md-6">
          <%= f.label :rg, class: "form-label", required: true %>
          <%= f.text_field :rg, class: "form-control", id: "inputPassword4", required: true %>
          <%= f.error :rg, class: "text-danger" %> <!-- Mensagem de erro abaixo do campo -->
        </div>

        <div class="col-md-6">
          <%= f.label :telefone, class: "form-label" %>
          <%= f.text_field :tel, class: "form-control", id: "inputPassword4" %>
          <%= f.error :tel, class: "text-danger" %> <!-- Mensagem de erro abaixo do campo -->
        </div>

        <div class="col-md-6">
          <%= f.label :data, "Data", required: true %>
          <%= f.date_field :data, class: "form-control", required: true %>
          <%= f.error :data, class: "text-danger" %> <!-- Mensagem de erro abaixo do campo -->
        </div>
        
        <div class="col-md-6">
          <%= f.label :setor_id, "Selecione um setor", required: true %>
          <%= f.collection_select :setor_id, Setor.all, :id, :nome, { include_blank: '-' }, class: 'form-select' %>
          <%= f.error :setor_id, class: "text-danger" %> <!-- Mensagem de erro abaixo do campo -->
        </div>
        <div class="col-md-6">
          <%= f.label :hora_inicial, "Hora de início da visita", required: true %>
          <%= f.time_field :hora_inicial, class: "form-control", required: true %>
          <%= f.error :hora_inicial, class: "text-danger" %> <!-- Mensagem de erro abaixo do campo -->
        </div>

        <div class="col-md-6">
          <%= f.label :hora_termino, "Hora do término da visita", required: true %>
          <%= f.time_field :hora_termino, class: "form-control", required: true %>
          <%= f.error :hora_termino, class: "text-danger" %> <!-- Mensagem de erro abaixo do campo -->
        </div>


        <div class="col-md-6">
          <h4><%= label_tag "flexCheckIndeterminate", "Concluir visita", class: "form-check-label", style: "color: #007bff;" %></h4>
          <div class="form-check">
            <%= f.check_box :concluida, class: "form-check-input", id: "flexCheckIndeterminate" %>
          </div>
        </div>

        <div class="d-flex justify-content-between">
          <div class="d-flex gap-2">
            <%= f.button :submit, class: "btn btn-success" %>
          </div>
          <div class="d-grid gap-2 d-md-flex justify-content-md-end">
            <%= link_to "Voltar", visitantes_path, class: "btn btn-outline-primary" %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
