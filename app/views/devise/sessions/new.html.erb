<div class="conteiner p-5">
  <div class="d-flex justify-content-center">
    <div class="card mb-3 justify-content-start" style="max-width: 940px;">
      <div class="row g-0">
        <div class="col-md-8">  
          <img src="/img/logo.png" class="img-fluid rounded-start" style="opacity: 0.55;">
        </div>
        <div class="col-md-4">
          <div class="card-body">
            <!-- Exibir mensagens flash -->
            <% if flash[:alert].present? %>
              <div class="alert alert-danger">
                <%= flash[:alert] %>
              </div>
            <% end %>

            <% if flash[:notice].present? %>
              <div class="alert alert-success">
                <%= flash[:notice] %>
              </div>
            <% end %>

            <!-- Exibir erros do recurso -->
            <% if resource.errors.any? %>
              <div class="alert alert-danger">
                <ul>
                  <% resource.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="form-label">
                <div class="card-head p-3">
                  <h4>Fa√ßa seu Login</h4>
                </div>
                <div class="card-body p-3">
                  <%= f.input :email, required: false, autofocus: true, input_html: { autocomplete: "email", class: "form-control", id: "inputEmail4" } %>
                  <%= f.input :password, required: false, input_html: { class: "form-control", id: "inputPassword4" } %>
                  <p></p>
                  <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
                  <input class="btn btn-primary" type="submit" value="Logar"><br><br>
                  <%= render "devise/shared/links" %>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
