<p style="color: green"><%= notice %></p>

<div class="card">
  <div class="card-header">
    <h3>Unidades</h3>
  </div>
  <div class="card-body">
    <h5 class="card-title"><%= render @unidade %></h5>


<div class="d-flex justify-content-between">
<div class="d-flex gap-2">
      <%= link_to "Editar", edit_unidade_path(@unidade), class: "btn btn-primary" %>
      <%= button_to "Apagar" , @unidade, method: :delete, class:"btn btn-danger" %>
</div>

<div class="d-grid gap-2 d-md-flex justify-content-md-end">
      <%= link_to "Voltar", unidades_path, class:"btn btn-outline-primary" %>
</div>
</div>     
</div>



 
