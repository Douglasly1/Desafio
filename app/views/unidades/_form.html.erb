<div class="card">
<%= simple_form_for(@unidade) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="card-body">
  
  <%= f.label :nome, class: "form-label" %>
  <%= f.text_field :nome, class: "form-control", id: "inputEmail4" %>

  <%= f.label :endereco, class: "form-label" %>
  <%= f.text_field :endereco, class: "form-control", id: "inputEmail4" %>


  
  
<p></p>

<div class="d-flex justify-content-between">
<div class="d-flex gap-2">
 
      <%= f.button :submit, class:"btn btn-success" %>
  </div>  
  <div class="d-grid gap-2 d-md-flex justify-content-md-end">
     <%= link_to "Voltar", visitantes_path, class:"btn btn-outline-primary" %>
</div>
</div>
</div>
<% end %>

