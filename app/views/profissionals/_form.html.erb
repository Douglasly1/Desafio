<div class="card">
  <%= simple_form_for(@profissional) do |f| %>
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

    <div class="card-body">
      <% if flash[:alert].present? %>
        <div class="alert alert-danger">
          <%= flash[:alert] %>
        </div>
      <% end %>

      <% if flash[:notice].present? %>
        <div class="alert alert-success">
          <%= flash[:notice] %>
        </div>
      <% end %>

 

      <div class="col-md-6">
        <%= f.input :nome, class: "form-control", required: true %>
      </div>

      <div class="col-md-6">
        <%= f.input :cpf, class: "form-control", required: true %>
      </div>

      <div class="col-md-6">
        <%= f.input :rg, class: "form-control", required: true %>
      </div>

      <div class="col-md-6 mb-3">
        <%= f.label "Contato", class: "form-label" %>
        <%= f.text_field :telefone, class: "form-control", id: "inputPassword4" %>
      </div>

      <div class="col-md-6 mb-3">
        <%= f.label "Cargo", class: "form-label" %>
        <%= f.text_field :cargo, class: "form-control", id: "inputEmail4" %>
      </div>

      <div class="col-md-6 mb-3">
        <%= f.label "Selecione uma unidade:", class: "form-label" %>
        <%= f.collection_select :unidade_id, Unidade.all, :id, :nome, { include_blank: '-' }, class: 'form-select' %>
      </div>

      <div class="col-md-6 mb-3">
        <%= f.label "Selecione um Setor:", class: "form-label" %>
        <%= f.collection_select :setor_id, Setor.all, :id, :nome, { include_blank: '-' }, class: 'form-select' %>
      </div>

      <div class="col-md-6 mb-3">
        <%= f.label "Selecione um usuÃ¡rio:", class: "form-label" %>
        <%= f.collection_select :user_id, User.all, :id, :email, { include_blank: '-' }, class: 'form-select' %>
      </div>

      <p></p>
      <br>
      <div class="d-flex justify-content-between">
        <div class="d-flex gap-2">
          <%= f.button :submit, class: "btn btn-success" %>
        </div>
        <%= link_to "Voltar", profissionals_path, class: "btn btn-outline-primary" %>
      </div>
    </div>
  <% end %>
</div>
