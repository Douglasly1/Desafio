
<div class="card">
<%= simple_form_for(@profissional) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="card-body">

  <div class="col-md-6">
 <%= f.input :nome, class: "form-control",  required: true %>
    </div>

  <div class="col-md-6">
 
    <%= f.input :cpf, class: "form-control",  required: true %>
</div>


  <div class="col-md-6"></br>
 
    <%= f.input :rg, class: "form-control",  required: true %>
  </div>

  <div class="col-md-6"></br>
    <%= f.label "Contato", class: "form-label" %>
    <%= f.text_field :telefone, class: "form-control", id: "inputPassword4" %>
  </div>
  <div class="col-md-6"></br>
    <%= f.label "Cargo", class: "form-label" %>
    <%= f.text_field :cargo, class: "form-control", id: "inputEmail4" %>
  </div>

  <div class="col-md-6"></br>
  <%= f.label "Selecione uma unidade:", class: "form-label"%>

    <%= f.collection_select :unidade_id, Unidade.all, :id, :nome, { include_blank: 'Selecione uma Unidade' }, class: 'form-select' %>
  </div>

  <div class="col-md-6"></br>
    <%= f.label "Selecione um Setor:", class: "form-label"%>
   
    <%= f.collection_select :setor_id, Setor.all, :id, :nome, { include_blank: 'Selecione um setor' }, class: 'form-select' %>
  </div>
  
<p></p>
</br>
<div class="d-flex justify-content-between">
<div class="d-flex gap-2">
 
      <%= f.button :submit, class:"btn btn-success" %>
  </div>  
  <% end %>
     <%= link_to "Voltar", profissionals_path, class:"btn btn-outline-primary" %>
</div>
</div>


</div>
