<form class="row g-3">
  <%= simple_form_for(@setor) do |f| %>
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

    <div class="col-md-6">
      <%= f.label :nome, class: "form-label" %>
      <%= f.text_field :nome, class: "form-control", id: "inputEmail4", required: true %>
    </div>

    <div class="col-md-6">
      <%= f.label "Selecione uma unidade:", class: "form-label" %>
      <%= f.collection_select :unidade_id, Unidade.all, :id, :nome, { include_blank: 'Selecione uma unidade' }, class: 'form-select', required: true %>
    </div>

    <!-- Botões de Ação -->
    <div class="col-12 d-flex justify-content-between mt-3">
      <%= f.button :submit, "Salvar", class:"btn btn-success" %>
      <%= link_to "Voltar", setors_path, class:"btn btn-outline-primary" %>
    </div>

  <% end %>
</form>
